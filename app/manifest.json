{
  "name": "Web Developer Tools",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "前端开发助手",
  "icons": {
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "64": "./icons/64.png",
    "72": "./icons/72.png"
  },
  "permissions": [
    "clipboardWrite",
    "management",
    "activeTab",
    "history",
    "background",
    "bookmarks",
    "cookies",
    "contentSettings",
    "contextMenus",
    "browsingData",
    "tabs",
    "notifications",
    "idle",
    "<all_urls>",
    "*://*/",
    "http://*/",
    "https://*/",
    "ftp://*/"
  ],
  "options_page": "html/options.html",
  "chrome_url_overrides": {
    "newtab": "html/home.html"
  },
  "browser_action": {
    "default_title": "Click show QR",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
    // "page": "html/background.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
